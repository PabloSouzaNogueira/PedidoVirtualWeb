@model PedidoVirtualWeb.Models.Pedido

@{
    ViewBag.Title = "Editar Pedido";
}

<h1 style="color:#FFFFFF">Editar Pedido</h1>

<hr />
<div> @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-primary" })</div>

@using (Html.BeginForm())
{


    <div style="margin-top:20px; background-color:#E1E1E1; padding:10px; border-radius:5px;  border:2px solid #FFFFFF" class="form-horizontal">

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.PedidoId)




        <div class="form-group">
            @Html.LabelFor(model => model.UsuarioId, "Usuário", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UsuarioId", null, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.UsuarioId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StatusPedidoId, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StatusPedidoId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusPedidoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <br />
    <input type="submit" value="Save" class="btn btn-primary" />
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
