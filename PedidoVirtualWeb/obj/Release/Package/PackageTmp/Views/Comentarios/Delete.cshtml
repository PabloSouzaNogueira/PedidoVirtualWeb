@model PedidoVirtualWeb.Models.Comentario

@{
    ViewBag.Title = "Apagar Comentário";
}

<h1 style="color:#FFFFFF">Apagar Comentário</h1>
<hr />
<div> @Html.ActionLink("Voltar", "Details", "Home", new { id = @Html.DisplayFor(model => model.ItemId) }, new { @class = "btn btn-primary" })</div>


<div style="margin-top:20px; background-color:#E1E1E1; padding:10px; border-radius:5px;  border:2px solid #FFFFFF" class="container">
    <h1 style="color:#BD323C; text-align:center">@Html.DisplayFor(model => model.Item.Nome)</h1>
    <br />
    <div class="row">
        <div class="col-md-6">
            <img class="img-thumbnail" style="width:100%; height:300px" src="@Html.DisplayFor(model => model.Item.Foto)" />
        </div>
        <div class="col-md-6">
            <h3 style="font-style:italic; text-align:justify">@Html.DisplayFor(model => model.Item.Descricao)</h3>
            <br />
            <h2 style="font-style:italic; text-align:justify" class="text-success">@String.Format("R$ {0},00", @Html.DisplayFor(model => model.Item.Preco))</h2>
            <br />
        </div>
     
        <div style="margin-top:10px" class="col-md-12">
            @Html.TextAreaFor(model => model.Mensagem, 5, 120, htmlAttributes: new { style = "font-size:20px; width: 100%; max-width: 100%; font-style:italic", @class = "form-control text-info", @disabled = "disabled" })
        </div>
    </div>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Deletar" class="btn btn-primary" />
}