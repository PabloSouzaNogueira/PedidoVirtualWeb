@model PedidoVirtualWeb.Models.Item

@{
    ViewBag.Title = "";
}

<h1 style="color:#FFFFFF">Visualizar Item</h1>
<hr />
<div> @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-primary" })</div>

<div>

    <dl style="margin-top:20px; background-color:#E1E1E1; padding:10px; border-radius:5px;  border:2px solid #FFFFFF" class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Foto)
        </dt>

        <dd>
            <img style="width:90px; height:90px" src="@Html.DisplayFor(model => model.Foto)" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Categoria.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Preco)
        </dt>

        <dd>
            @String.Format("R$ {0},00", @Html.DisplayFor(model => model.Preco))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estoque)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estoque)
        </dd>

    </dl>
</div>

<div>@Html.ActionLink("Editar", "Edit", new { id = Model.ItemId }, new { @class = "btn btn-primary" })</div>
